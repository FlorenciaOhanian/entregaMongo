<form id="idForm" class="idForm">
<h1>Crear nuevo producto</h1>

    <div>
        <label for="nombre">Nombre</label>
        <input type="text" required name="nombre" id="nombre"/>
    </div>
    <div>
        <label for="codigo">Codigo</label>
        <input type="text" required name="codigo" id="codigo"/>
    </div>
    <div>
        <label for="descripcion">Descripcion</label>
        <input type="text" required name="descripcion" id="descripcion" />
    </div>
    <div>
        <label for="cantidad">Cantidad</label>
        <input type="number" required name="cantidad" id="cantidad" />
    </div>

    <div>
        <label for="precio">Precio</label>
        <input type="number" required name="precio" id="precio" />
    </div>
    <div>
        <label for="stock">Stock</label>
        <input type="text" required name="stock" id="stock" />
    </div>

    <div>
        <label for="categprias">Categoria</label>
        <input type="string" required name="categoria" id="categoria" />
    </div>
    <div>
        <button type="submit" id="btn-form"> Agregar </button>
    </div>
</form>

