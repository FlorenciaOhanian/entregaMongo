<form id="idForm" class="idForm">
<h1>Crear nuevo producto</h1>

    <div>
        <label for="codigo">Codigo</label>
        <input type="text" required name="codigo" id="codigo"/>
    </div>

    <div>
        <label for="nombre">Nombre</label>
        <input type="text" required name="nombre" id="nombre"/>
    </div>

    <div>
        <label for="marca">Marca</label>
        <input type="text" required name="marca" id="marca" />
    </div>

    <div>
        <label for="precio">Precio</label>
        <input type="number" required name="precio" id="precio" />
    </div>

    <div>
        <label for="unidades">Unidades</label>
        <input type="text" required name="unidades" id="unidades" />
    </div>

    <div>
        <label for="cantidad">Cantidad</label>
        <input type="number" required name="cantidad" id="cantidad" />
    </div>

    <div>
        <label for="categoria">Categoria</label>
        <input type="text" required name="categoria" id="categoria" />
    </div>

    <div>
        <button type="submit" id="btn-form"> Agregar </button>
    </div>
</form>

<div id="containerProductos" class="containerProd"></div>